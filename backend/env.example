# =============================================================================
# LOGGING SETTINGS
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable/disable features for development
ENABLE_AGENT_INITIALIZATION_TESTS=true
ENABLE_REDIS_HEALTH_CHECK=true
